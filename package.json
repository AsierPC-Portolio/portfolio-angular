{
  "name": "portfolio-angular",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "lint": "eslint . --config config/eslint.config.js --ext .ts,.html --fix",
    "format": "prettier --write \"src/**/*.{ts,html,scss}\"",
    "storybook": "ng run portfolio-angular:storybook",
    "build-storybook": "ng run portfolio-angular:build-storybook",
    "api:gen": "openapi-generator-cli generate -c config/openapi-generator.config.json --skip-validate-spec",
    "api:clean": "rimraf src/app/api/*",
    "api:postclean": "rimraf src/app/api/README.md src/app/api/git_push.sh src/app/api/.gitignore src/app/api/.openapi-generator-ignore src/app/api/.openapi-generator",
    "api:all": "npm run api:clean && npm run api:gen && npm run api:postclean"
  },
  "prettier": {
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "type": "module",
  "dependencies": {
    "@angular/common": "^20.1.0",
    "@angular/compiler": "^20.1.0",
    "@angular/core": "^20.1.0",
    "@angular/forms": "^20.1.0",
    "@angular/platform-browser": "^20.1.0",
    "@angular/router": "^20.1.0",
    "@ng-icons/core": "^32.0.0",
    "@ng-icons/heroicons": "^32.0.0",
    "@ngx-translate/core": "^16.0.4",
    "@ngx-translate/http-loader": "^16.0.1",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^20.1.0",
    "@angular-eslint/builder": "^20.1.1",
    "@angular-eslint/eslint-plugin": "^20.1.1",
    "@angular-eslint/eslint-plugin-template": "^20.1.1",
    "@angular-eslint/template-parser": "^20.1.1",
    "@angular/build": "^20.1.0",
    "@angular/cli": "^20.1.0",
    "@angular/compiler-cli": "^20.1.0",
    "@storybook/addon-docs": "^9.0.16",
    "@storybook/angular": "^9.0.16",
    "@types/jasmine": "~5.1.0",
    "@typescript-eslint/parser": "^8.36.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "eslint-plugin-storybook": "^9.0.16",
    "jasmine-core": "~5.8.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "storybook": "^9.0.16",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.8.2"
  }
}
